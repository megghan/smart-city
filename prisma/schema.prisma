generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//modelo pin
model PinAcessibilidade {
  id        String @id @default(uuid())
  latitude  Float
  longitude Float
  descricao String

  nome_local         String @default("Local não nomeado")
  tipoAcessibilidade String

  cidade   String // Para filtrar os pins por cidade
  endereco String? // endereço completo para melhorar a identificacao

  // Preparo para votação com o BI
  nota_media Float    @default(0.0) //média atual das notas
  contagem_ratings    Int @default(0)
  ratings    Rating[] //Link com tabela de notas 
  // Link com usuario
  usuarioId  String
  usuario    User     @relation(fields: [usuarioId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Futuramente, os modelos de 'User', 'Account', etc. do Auth.js virão aqui.
// ====================================================================
// MODELOS NECESSÁRIOS PARA O AUTH.JS 
// ====================================================================

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]

  pins    PinAcessibilidade[]
  ratings Rating[] //add lista de Rating que o usuario deu
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// tabela de votos
model Rating {
  id     String            @id @default(uuid())
  nota   Int //voto
  pin    PinAcessibilidade @relation(fields: [pinId], references: [id])
  pinId  String
  user   User              @relation(fields: [userId], references: [id])
  userId String

  createdAt DateTime @default(now())

  //garante unicidade da nota por pin
  @@unique([pinId, userId])
}
